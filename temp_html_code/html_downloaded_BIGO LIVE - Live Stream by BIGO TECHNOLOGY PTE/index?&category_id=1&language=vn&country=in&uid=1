<script type="text/javascript" src="/assets/live/anchor_article/js/jquery-2.2.2.min.js"></script>
<script type="text/javascript" src="/assets/live/anchor_article/js/vue.min.js"></script>
<script type="text/javascript" src="/assets/live/anchor_article/js/dropload.js"></script>
<script type="text/javascript" src="/assets/live/anchor_article/js/js.js"></script>
<script type="text/javascript">
    var vue_app_loading_list = new Vue({
        el: '#loading_cache_box_e',
        data: {
            todos: [
                // json.roominfo_vec
            ]
        }
    });

    $(function(){
        // dropload
        var  page = 1;
        var  language = "vn";
        var  category_id = "1";
        var  country = "in";
        $('.content_wrap').dropload({
            scrollArea : window,
            domUp : {
                domClass   : 'dropload-up',
                domRefresh : '<div class="dropload-refresh">↓Refresh</div>',
                domUpdate  : '<div class="dropload-update">↑Refresh</div>',
                domLoad    : '<div class="dropload-load"><span class="loading"></span>Loading...</div>'
            },
            domDown : {
                domClass   : 'dropload-down',
                domRefresh : '<div class="dropload-refresh">↑Refresh</div>',
                domLoad    : '<div class="dropload-load"><span class="loading"></span>Loading...</div>',
                domNoData  : '<div class="dropload-noData">No data</div>'
            },
            loadUpFn : function(me){
                window.location.reload();
            },
            loadDownFn : function(me){
                $.post('', {'page': page,'language':language,'category_id':category_id,'country':country}, function(data) {

                    var data = JSON.parse(data);
                    var list = data.data;

                    var len = list.length;
                    setTimeout(function(){
                        if(data.code == 1){
                            page = page + 1;
                            var htmlstr = '';
                            for(i in list){
                                htmlstr += '<li><a href="'+ list[i].detail_url + '"><img src="'+ list[i].pic + '">'
                                    + '<div class="opa_bg"><div class="intro_words">'+ list[i].title + '</div>'
                                    + '</div></a></li>';
                            }
                            $('#content_list_e').append(htmlstr);
                        }

                        if ( me ) {
                            if (len == 0) {
                                me.lock();
                                // 无数据
                                me.noData();
                            };
                        };
                        me.resetload();
                    }, 50);
                }).error(function(){
                    alert('error !');
                    me.resetload();
                });
            },
            threshold : 50
        });
    });

</script>
