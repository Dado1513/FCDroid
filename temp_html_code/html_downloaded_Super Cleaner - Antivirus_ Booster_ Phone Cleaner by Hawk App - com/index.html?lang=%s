<script type="text/javascript">
    function getRequest() { // Get request parameters
        var url = location.search;
        var Request = new Object();
        if (url.indexOf("?") != -1) {
            var str = url.substr(1);
            if (str.indexOf("&") != -1) {
                strs = str.split("&");
                for (var i = 0; i < strs.length; i++) {
                    Request[strs[i].split("=")[0]] = unescape(strs[i].split("=")[1]);
                }
            } else {
                Request[str.split("=")[0]] = unescape(str.split("=")[1]);
            }
        }
        return Request;
    }

    var Request = new Object();
    Request = getRequest();

    var lang;
    lang = Request['lang'];
    if (lang) {
        document.write("<script type='text/javascript' src='lang/" + lang + ".json'><\/script>");
    } else {
        lang = "en";
    }
</script>
