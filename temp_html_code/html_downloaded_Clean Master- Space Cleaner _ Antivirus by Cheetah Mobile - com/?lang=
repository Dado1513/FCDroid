  body {font-family:Helvetica,Verdana,Arial;}
  .wrapper {padding:0 20px;}
  .title {margin:0 0 30px;font-size:30px;color:#333;}
  .content {width:100%;font-size:14px;line-height:24px;color:#585858;}
