<body>
  <div class="wrapper">
    <div class="content" id="content">
    </div>
  </div>
  <script type="text/javascript">
    function getQueryString(name) {
      var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)", 'i'); // 匹配目标参数
      var result = window.location.search.substr(1).match(reg); // 对querystring匹配目标参数
      if (result != null) {
        return decodeURIComponent(result[2]);
      } else {
        return null;
      }
    }
    var langs = {
        "ar":"local/ar.htm",
        "bg":"local/bg.htm",
        "cs":"local/cs.htm",
        "da":"local/da.htm",
        "de":"local/de.htm",
        "el":"local/el.htm",
        "en":"local/en.htm",
        "es":"local/es.htm",
        "fr":"local/fr.htm",
        "he":"local/he.htm",
        "hi":"local/hi.htm",
        "hr":"local/hr.htm",
        "hu":"local/hu.htm",
        "id":"local/id.htm",
        "it":"local/it.htm",
        "ja":"local/ja.htm",
        "ko":"local/ko.htm",
        "ms":"local/ms.htm",
        "nl":"local/nl.htm",
        "pl":"local/pl.htm",
        "pt":"local/pt.htm",
        "ro":"local/ro.htm",
        "ru":"local/ru.htm",
        "sk":"local/sk.htm",
        "sl":"local/sl.htm",
        "sr":"local/sr.htm",
        "th":"local/th.htm",
        "tr":"local/tr.htm",
        "uk":"local/uk.htm",
        "ui":"local/ui.htm",
        "zh":"local/zh.htm",
        "zh-tw":"local/zh-tw.htm"
    },
    language = (getQueryString('lang')||window.navigator.language||window.navigator.browserLanguage).toLowerCase().replace('_','-'),
    country = language.split('-')[0],
    langCode = langs.en,
    xhr = new XMLHttpRequest,
    content = document.getElementById('content');

    if(langs[language]){
        langCode = langs[language];
    }else if(langs[country]){
        langCode = langs[country];
    }
    xhr.open('GET', langCode, true);
    xhr.onreadystatechange = function () {
        if (xhr.readyState == 4 && xhr.status == 200) {
            try {

              if(langCode === langs.ar){
                content.classList.add('text-right');
              }
               content.innerHTML = xhr.responseText
            } catch (e) {
              console.log(e)
            }
        }
    }
    xhr.send();
    // document.getElementById(langCode).style.display = 'block';
  </script>
</body>
